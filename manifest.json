{
  "manifest_version": 3,
  "name": "Custom New Tab",
  "version": "1.0",
  "description": "Replace the default new tab with custom shortcuts and backgrounds !",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Create New Tab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
